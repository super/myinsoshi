<div id="wrap">
  <div id="content">
    <%= error_messages_for :user%>
    <div class="col1">
      <h2>Sign up</h2>
      <% form_for :user, :url => users_path do |f|%>
        <div style="margin:0;padding:0">
          <input name="authenticity_token" type="hidden" value="ec271d8c55b6d7e73176c36be05b60424dd25617" />
        </div>
        <div class="form_row">
          <label for="person_email">
            Email address <span class="small">(never made
              public)
            </span>
          </label>
          <%= f.text_field :email, :class => 'input', :size => 40%>
          <script type="text/javascript">
            //<![CDATA[
          $(document).ready(function(){$('#person_email').focus()});
          //]]>
          </script>
        </div>
        <div class="form_row">
          <label for="person_name">Name 
            <span class="small">(will be displayed)</span></label>
          <%= f.text_field :username, :class => 'input', :size => 40 %>
        </div>
        <div class="form_row">
          <label for="person_password">Password</label>
          <%= f.password_field :password, :class => 'input', :size => 40%>
        </div>
        <div class="form_row">
          <label for="person_password_confirmation">Confirm Password</label>
          <%= f.password_field :password_confirmation, :class => 'input', :size => 40 %>
        </div>
        <div class="form_row">
          <%= submit_tag 'Sign Up' , :class => 'button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
