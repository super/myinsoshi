<%= render :partial => 'header'%>
<div id="wrap">
  <div id="content">
    <h2>New blog post</h2>
    <% form_for @blog,user_blogs_path(:user_id => logged_in_user.id) do |f|%>
      <div class="form_row">
        <label for="post_title">Title</label>
        <%= f.text_field :title, :class => 'input', :size => 40 %>
      </div>
      <script type="text/javascript">
        //<![CDATA[
      $(document).ready(function(){$('#post_title').focus()});
      //]]>
    </script>
    <p>HTML and
    <a href="http://daringfireball.net/projects/markdown/basics" onclick="window.open(this.href);return false;">Markdown</a>
    formatting supported</p>
    <div class="form_row">
      <label for="post_body">Post</label>
      <%= f.text_area :body, :rows => 20, :cols => 60 %>
    </div>
    <div class="form_row">
      <%= submit_tag 'Save', :class => 'button'%>
    </div>
  <% end %>
</div>
